<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

    <TextView
        android:id="@+id/tv_vacancy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Senior разработчик"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_vacancy_employer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_vacancy_name"
        android:layout_marginTop="5dp"
        android:text="ОАО Газпром"
        />
    <TextView
        android:id="@+id/tv_published_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 мая"
        android:layout_alignTop="@+id/tv_vacancy_employer"
        android:layout_alignParentRight="true"/>
</RelativeLayout>